{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-Wall",
                "-I./export/include/",
                "-I./export/include/xmlrpc/",
                "./export/src/*.cpp",
                "./export/build/libXmlRpc.a",
                "-lws2_32",
                "-o",
                "./export/build/Server",
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Build test module",
            "type": "shell",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-Wall",
                "-I./include/",
                "-o",
                "./export/test/build/${fileBasenameNoExtension}.exe",
                "./export/src/C5Requirement.cpp",
                "./export/src/C5Exceptions.cpp",
                "./export/test/src/${fileBasename}"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
    ]
}